%section.sign_in
  = form_tag sessions_path do
    %h1 Sign In
    %fieldset
      %dl
        %dd= text_field_tag :email_or_username, nil, placeholder: 'email or username'
        %dd= password_field_tag :password, nil, placeholder: 'password'
    %fieldset
      %input{type: 'submit', value: 'sign in'}

