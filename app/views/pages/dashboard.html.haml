%section#task_list
  %ul
    - tasks.each do |task|
      %li(data-task_description= "#{task.description}" data-task_name= "#{task.name}")
        .actions
          = link_to "\u2713 complete", complete_project_task_path(project, task), class: 'complete'
        .delete= link_to "x", project_task_path(project, task), method: :delete, class: 'delete'
        %strong.task_name= link_to task.name, '#'
%section#task_form
  = form_tag :projects do
    %fieldset.actions
      - if project.present?
        %nav.status
          = link_to 'incomplete', incomplete_project_path(project), class: "#{'active' if action_name == 'incomplete' || action_name ==  'show' } "
          |
          = link_to 'complete', complete_project_path(project), class: "#{'active' if action_name == 'complete' }  "
          |
          = link_to 'all', all_project_path(project), class: "#{'active' if action_name == 'all'} "
      %input{ type: 'reset'}
      = submit_tag 'save tasks'
    %fieldset.fields
      = text_area_tag :projects
    %fieldset.actions
      = submit_tag 'save tasks'
      %input{ type: 'reset'}
= render partial: 'layouts/placeholder'
